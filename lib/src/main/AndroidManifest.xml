<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.co.cyberagent.stf.input.agent">

    <uses-permission android:name="android.permission.DISABLE_KEYGUARD"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher">

        <service android:name=".InputService"
            android:exported="true">
            <intent-filter>
                <action android:name="jp.co.cyberagent.stf.input.agent.InputService.ACTION_START"/>
                <action android:name="jp.co.cyberagent.stf.input.agent.InputService.ACTION_STOP"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </service>

        <activity android:name=".IdentityActivity"
            android:exported="true"
            android:finishOnTaskLaunch="true"
            android:noHistory="true"
            android:stateNotNeeded="true"
            android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="jp.co.cyberagent.stf.input.agent.IdentityActivity.ACTION_IDENTITY"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

    </application>

</manifest>
